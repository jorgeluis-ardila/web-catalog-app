#root {
  transition: all 0.3s ease-out 0s;
}

.products {
  box-sizing: border-box;
  width: 95%;
  margin: 0 auto;
  padding: 30px;
  border-radius: 30px 30px 0 0;
  background-color: $white;
  @media only screen and (max-width: 767px) {
    padding: 15px;
  }
  &__filters {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 5px 0 25px;
    transition: all 0.3s ease 0s;
    &.sticky {
      position: sticky;
      top: 70px;
      padding: 10px 5px;
      background-color: $white;
    }
    .orderbyBox {
      position: relative;
      width: 160px;
      color: $main-blue--dark;
      font-weight: $regular;
      font-size: 13px;
      font-family: $font-family;
      @media only screen and (min-width: 320px) and (max-width: 767px) {
        width: 130px;
      }
      @media only screen and (max-width: 320px) {
        width: 100%;
      }
      &.active {
        .orderbyBox__list {
          opacity: 1;
          animation-name: none;
          // animation-direction: reverse;
          .orderbyBox__option {
            cursor: pointer;
          }
        }
        .orderbyBox__icon {
          transform: translateY(-50%) rotate(180deg);
        }
      }
      &__current {
        position: relative;
        z-index: 1;
        padding: 15px 10px;
        border-radius: 20px;
        outline: none;
        background-image:
          linear-gradient(to right, rgba($comp-gray, 0.1), rgba($comp-gray, 0.1)),
          linear-gradient(to right, $white, $white);
        cursor: pointer;
      }
      &__icon {
        position: absolute;
        top: 50%;
        right: 15px;
        transform: translateY(-50%);
        width: 10px;
        fill: $comp-blue--gray;
      }
      &__input {
        display: none;
        &:checked + .orderbyBox__text{
          display: block;
        }
      }
      &__text { 
        display: none;
      }
      &__list {
        animation-name: HideList;
        animation-duration: 0.5s;
        animation-delay: 0.5s;
        animation-fill-mode: forwards;
        animation-timing-function: ease-out;
        box-shadow 0 15px 30px -15px rgba($comp-gray--light, 0.5);
        opacity: 0;
        position: absolute;
        top: calc(100% - 15px);
        width: 100%;
        padding: 15px 0 0;
        border-radius: 0 0 20px 20px;
        background-image:
          linear-gradient(to right, rgba($comp-gray, 0.15), rgba($comp-gray, 0.15)),
          linear-gradient(to right, $white, $white);
      }
      &__option {
        display: block;
        padding: 15px;
        &:hover,
        &:focus {
          background-color: rgba($comp-gray, 0.1);
        }
        &.checked {
          pointer-events: none;
          background-color: rgba($comp-gray, 0.1);
        }
      }
    }

    @keyframes HideList {
      from {
        transform: scaleY(1);
      }
      to {
        transform: scaleY(0);
      }
    }

    .orderView {
      display: flex;
      align-items: center;
      gap: 10px;
      &__item {
      }
      &__button {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2px;
        width: 65px;
        height: 30px;
        padding: 5px;
        border: none;
        border-radius: 5px;
        outline: none;
        background-color: rgba($main-blue--light, 0.3);
        cursor: pointer;
        @media only screen and (max-width: 767px) {
          width: 50px;
        }
        span {
          background-color: rgba($comp-gray, 0.4);
          display: block;
          width: 100%;
          height: 100%;
          border-radius: 3px;
        }
        &.active {
          background-color: rgba($main-blue, 0.6);
          span {
            background-color: rgba($comp-gray--middle, 0.8);
          }
        }
        &--five {
          @media only screen and (max-width: 1025px) {
            display: none;
          }
        }
        &--four {
          @media only screen and (max-width: 900px) {
            display: none;
          }
        }
        
        &--three {
          display: none;
          @media only screen and (min-width: 767px) and (max-width: 1025px) {
            display: flex;
          }
        }
        &--two {
          display: none;
          @media only screen and (min-width: 320px) and (max-width: 900px) {
            display: flex;
          }
        }
        &--one {
          display: none;
          @media only screen and (min-width: 320px) and (max-width: 767px) {
            display: flex;
          }
        }
      }
    }
  }
  &__list {
    gap: 30px;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    align-items: stretch;
    @media only screen and (max-width: 1024px) {
      grid-template-columns: repeat(4, 1fr);
    }
    @media only screen and (max-width: 768px) {
      grid-template-columns: repeat(3, 1fr);
    }
    @media only screen and (max-width: 767px) {
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }
    @media only screen and (max-width: 320px) {
      grid-template-columns: repeat(1, 1fr);
    }
    &.one-column {
      gap: 20px;
      .product-item {
        display: block;
      }
    }
  }
  .product-item {
    overflow: hidden;
    display: grid;
    justify-content: stretch;
    align-content: stretch;
    grid-template-columns: 1fr;
    grid-template-rows: minmax(60px, auto) minmax(120px, auto);
    border-radius: 40px;
    background: rgba($comp-blue--light, 0.3);
    cursor: pointer;
    &__image {
      display: flex;
      align-items: center;
      overflow: hidden;
      border-radius: 0 0 40px 40px;
    }
    img{
      aspect-ratio: 1 / 1;
      object-fit: cover;
      display: block;
      width: 100%;
      border-radius: 0 0 40px 40px;
    }
    &__info {
      gap: 10px;
      // height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 15px;
    }
    &__tag,
    &__name,
    &__price {
      font-weight: $regular;
      font-family: $font-family;
      text-align: center;
    }
    &__tag {
      color: $comp-gray--light;
      font-size: 12px;
    }
    &__name {
      color: $comp-gray;
      font-weight: $bold;
      font-size: 15px;
      &:after {
        content: '';
        display: block;
        width: 50px;
        height: 1px;
        margin: 5px auto 0;
        background-color: $main-pink;
      }
    }
    &__price {
      color: $main-blue--dark;
      font-weight: $medium;
      font-size: 14px;
    }
  }
  .pagination {
    display: none;
  }
}