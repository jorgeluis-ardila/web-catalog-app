#root {
  width: 92%;
  padding: 30px;
  margin: 0 auto;
  background-color: $white;
  border-radius: 30px 30px 0 0;
}

.products {
  &__list {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    align-items: stretch;
    gap: 30px;
  }
  .product-item {
    overflow: hidden;
    display: flex;
    flex-direction: column;
    border-radius: 40px;
    cursor: pointer;
    background: rgba($comp-blue--light, 0.3);
    &__image {
      overflow: hidden;
      border-radius: 0 0 40px 40px;
      img{
        aspect-ratio: 1 / 1;
        display: block;
        width: -webkit-fill-available;
      }
    }
    &__info {
      gap: 10px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      // height: 100%;
      padding: 15px;
    }
    &__tag,
    &__name,
    &__price {
      text-align: center;
      font-weight: $regular;
      font-family: $font-family;
    }
    &__tag {
      font-size: 12px;
      color: $comp-gray--light;
    }
    &__name {
      font-size: 15px;
      font-weight: $bold;
      color: $comp-gray;
      &:after {
        content: '';
        display: block;
        width: 50px;
        height: 1px;
        background-color: $main-pink;
        margin: 5px auto 0;
      }
    }
    &__price {
      font-size: 14px;
      color: $main-blue--dark;
    }
  }
  .pagination {
    display: none;
  }
}