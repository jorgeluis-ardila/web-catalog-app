main#wrapper {
  box-sizing: border-box;
  position: relative;
  min-height: calc(100vh - 20px);
  max-height: calc(100vh - 20px);
  overflow: auto;
  background-color: rgba($main-blue--green,0.5);
}
@keyframes stickyHeader {
  from {
    top: -100%;
  }
  to {
    top: 0;
  }
}
header {
  box-sizing: border-box;
  width: 100%;
  grid-template-columns: 25% 50% 25%;
  display: grid;
  align-items: center;
  padding: 10px;
  &.sticky {
    position: sticky;
    // top: 0;
    animation stickyHeader 0.8s ease-out 0s;
  }
  .logo {
    width: 90px;
    height: 90px;
    border-radius: 100%;
    background-color: $white;
    &__image {
      display: block;
    }
  }
  .search-bar {
    width: 500px;
    position: relative;
    &__box {
      background-color: rgba($comp-gray--light,0.2);
      box-sizing: border-box;
      width: 100%;
      height: 40px;
      padding: 12px 20px;
      border: none;
      border-radius: 20px;
      outline: none;
      color: $main-blue--dark;
      font: $regular 13px/40px $font-family;
      &::placeholder {
        color: $main-blue--dark;
      }
    }
    &__button {
      position: absolute;
      top: 8px;
      right: 20px;
      width: 24px;
      margin: auto 0;
      padding: 0;
      border: none;
      outline: none;
      background: transparent;
      cursor: pointer;
      svg {
        width: 100%;
        height: 100%;
        fill: $comp-gray;
      }
    }
  }
  .contact {
    justify-self: end;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 60px;
    height: 60px;
    border-radius: 100%;
    background-color: $comp-gray--middle;
    svg {
      width: 30px;
      height: 30px;
      fill: $main-green;
    }
  }
}
footer {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  padding: 25px 15px;
  background-color: $main-blue--dark;
  .copyright {
    color: $main-green;
    font: $sbold 13px/16px $font-family;
  }
  .social-media {
    display: flex;
    align-items: center;
    &__item{
      margin: 0 5px;
    }
    &__link {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 35px;
      height: 35px;
      border-radius: 100%;
      background: $main-blue--green;
      svg {
        width: 20px;
        height: 20px;
        fill: $main-blue--dark;
      }
    }
  }
}